{
  "name": "Open Direct",
  "description": "Search many sites directly from address bar using bangs provided by DuckDuckGo.",
  "version": "1.0.0",

  "background": {
    "scripts": ["background.js"]
  },

  "opendirect": { "keyword": "!" },
  "manifest_version": 2,

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "OpenDirect",
    "default_icon": {
      "16": "img/opendirect-16.png",
      "32": "img/opendirect-32.png"
    }
  },

  "icons": {
    "16": "img/opendirect-16.png",
    "32": "img/opendirect-32.png",
    "48": "img/opendirect-48.png",
    "128": "img/opendirect-128.png"
  }
}
